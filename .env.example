# Flight Price Tracker - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Database Configuration (PostgreSQL)
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=flight_tracker
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ===========================================
# Redis Configuration
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379

# ===========================================
# Kiwi.com Tequila API
# Get your API key from: https://tequila.kiwi.com/portal
# ===========================================
KIWI_API_KEY=your_kiwi_api_key_here

# ===========================================
# Telegram Bot Configuration
# Get your bot token from: https://t.me/BotFather
# ===========================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ===========================================
# Application Settings
# ===========================================
DEBUG=false
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Price check interval in hours (default: 6)
PRICE_CHECK_INTERVAL_HOURS=6
